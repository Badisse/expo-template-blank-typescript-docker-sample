{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 12",

    "compilerOptions": {
        "lib": [
            "es2019",
            "es2020.promise",
            "es2020.bigint",
            "es2020.string"
        ],
        "module": "commonjs",
        "target": "es2019",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "declaration": true,
        "composite": true,
        "inlineSources": true,
        "noImplicitReturns": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "typeRoots": [
            "./ts-declarations",
            "./node_modules/@types",
            "../../node_modules/@types",
            "../../ts-declarations"
        ],
        "jsx": "react-jsx"
    }
}